/* pages/workbench/workbench.wxss */

.prompt {
  width: 60%;
  margin: 20rpx auto;
  font-size: 32rpx;
  font-weight: bold;
  color: #111;
  text-align: center;
}

.prompt_num {
  display: inline-block;
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
  margin: 0 10rpx;
  background-color: rgb(131, 175, 155);
  color: #fff;
}

.image_cls {
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.right_cls {
  width: 35rpx;
  height: 35rpx;
  line-height:35rpx;
}

.pro_contanier {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 40rpx 20rpx;
  margin: 30rpx 20rpx;
  box-shadow: 2rpx 4rpx 4rpx rgba(150, 150, 150, 0.2);
  border: 1rpx solid rgba(50, 50, 50, 0.1);
  background-color: #fff;
}

.pro_text {
  width: 70%;
  text-align: center;
}

.text_row1 {
  font-weight: bold;
  font-size: 32rpx;
  color: #333;
}

.text_row2 {
  font-size: 28rpx;
  color: #777;
  margin-top:20rpx;
}
