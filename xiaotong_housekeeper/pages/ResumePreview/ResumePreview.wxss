/* pages/ResumePreview/ResumePreview.wxss */
.bigBox{
  margin: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  border: 1rpx solid #ccc;
}
.Res_pre_head{
  display: flex;
  justify-content: space-between;
  padding:20rpx;
  align-items:center;
}
.headPic{
  width: 160rpx;
  height: 160rpx;
  border-radius: 20rpx;
  background: steelblue;
}
.head_Info{
  flex-grow: 1;
  margin-left: 40rpx;
}
.res_pre_info{
  font-size: 28rpx;
  color: #777;
  margin: 10rpx 0;
  display: flex;
}
.res_pre_title{
  font-size: 38rpx;
}
.res_pre_border{
  margin-left: 20rpx;
  padding-left: 20rpx;
  border-left: 1rpx solid #ccc;
}
.row {
  display: flex;
  background: #fff;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  color: #333;
  font-size: 32rpx;
  border-bottom: 1rpx solid #ccc;
}