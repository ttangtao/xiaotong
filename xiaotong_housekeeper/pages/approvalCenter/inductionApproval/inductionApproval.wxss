@import '../../ResumePreview/ResumePreview.wxss';
.navbar{  
  flex: none;  
  display: flex;  
  background: #fff;  
  font-size: 34rpx;
  border-bottom: 10rpx solid #f5f5f5;
}  
.navbar .item{  
  position: relative;  
  flex: auto;  
  text-align: center;  
  line-height: 80rpx;  
  /* margin:0 30rpx; */
}  
.navbar .item.active{  
  color: #30c37d;  
}  
.navbar .item.active:after{  
  content: "";  
  display: block;  
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  height: 4rpx;  
  background: #30c37d;  
}  