          </view>
          <view class='res_pre_border'>
            <text>最高学历:</text>
            <text>本科</text>
          </view>
        </view>
        <view class='res_pre_info'>
          <view style='width:120rpx;'>
            <text>年龄:</text>
            <text>24</text>
          </view>
          <view class='res_pre_border'>
            <text>工作年限:</text>
            <text>3年</text>
          </view>
        </view>
      </view>
    </view>
    <!-- 基本信息 -->
    <view>
      <view wx:for="{{testData}}" wx:key="{{index}}" class='row'>
        <text>{{item.key}}</text>
        <text>{{item.value}}</text>
      </view>
    </view>
    <!--项目经历  -->
    <view class='proL_title'>
      <text>项目经历</text>
    </view>
    <view wx:for="{{2}}" wx:key="{{index}}" class='rp_projectList'>
