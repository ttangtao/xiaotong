/* pages/identify/identify.wxss */

.bj {
  background-color: #f5f5f5;
  height: 400rpx;
  position: relative;
}

.ide_box {
  width: 70%;
  height: 80%;
  border: 1rpx solid #ccc;
  margin: auto;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: #fff;
}

.ide_icon {
  width: 35rpx;
  height: 35rpx;
  line-height: 35rpx;
}

.upload {
  /* border-bottom: 1rpx solid #ccc; *//* border-top: 1rpx solid #ccc; *//* background: #fff; */
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 10rpx 20rpx;
  /* margin-top: 20rpx; */
  font-size: 28rpx;
  text-decoration: underline;
  color: steelblue;
}

.ide_text {
  margin-left: 10rpx;
}

.xing {
  width: 35rpx;
  height: 35rpx;
  line-height: 35rpx;
}

.result {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #fff;
}

.res_text {
  margin-left: 10rpx;
}

.row {
  display: flex;
  background: #fff;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  color: #333;
  font-size: 32rpx;
  border-bottom: 1rpx solid #ccc;
}
.row>text:last-child{
  font-size: 28rpx;
}

.bottom {
  width: 35rpx;
  height: 35rpx;
  line-height: 35rpx;
}

/** 修改button默认的点击态样式类**/

.otherButtonCls {
  border-radius: 0;
  position: fixed;
  width: 100%;
  bottom: 0;
}

