/* pages/home/home.wxss */
/*  */
.box{
  font-size: 28rpx;
  margin: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 6rpx;
  padding:20rpx;
  background: #fff;
  color: #333;
  box-shadow: 0rpx 4rpx 4rpx rgba(150, 150, 150, .2);
}
.icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 30rpx;
}
.box_top{
  display: flex;
  align-items: center;
  justify-content: space-between
}
.b_top_left{
  display: flex;
  align-items: center;
}
.allBtn{
  color: steelblue;
  text-decoration: underline;
  font-size: 24rpx;
}
.box_bottom{
  padding:20rpx 50rpx;
  padding-bottom: 10rpx;
}
.b_bottom_top{
  font-weight: bold;
}
.b_bottom_bottom{
  text-decoration: underline;
  padding-left: 70rpx;
}
.b_bottom_top,.b_bottom_bottom{
  margin: 10rpx 0;
  display: flex;
  align-items: center;
}
/*  */
.work{
  background: #fff;
  margin: 0 20rpx;
  padding: 10rpx 0;
  border: 1rpx solid #ddd;
  border-radius: 6rpx;
  box-shadow: 0rpx 4rpx 4rpx rgba(150, 150, 150, .2);
}
.work_all{
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 40rpx 0;
}
.w_right_top,.w_right_bottom{
  display: flex;
  align-items: center;
  font-size: 26rpx;
}
.icon2{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.w_left{
  width: 240rpx;
  height: 80rpx;
  background: #83AF9B;
  text-align: center;
  color: white;
  line-height: 80rpx;
  font-weight: bold;
  font-size: 36rpx;
  border-radius: 10rpx;
  letter-spacing: 4rpx;
  margin-right: 40rpx;
}