/* pages/pre_info_sheet/pre_info_sheet.wxss */
.p_i_head{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  color: #83AF9B;
  margin: 20rpx;
}
.p_left{
  display: flex;
  align-items: center;
}
.xing{
  width: 25rpx;
  height: 25rpx;
  line-height: 25rpx;
}
.p_text{
  margin-left: 10rpx;
}
.row{
  display: flex;
  background: #fff;
  justify-content: space-between;
  align-items: center;
  padding:20rpx;
  color: #333;
  font-size: 32rpx;
  border-bottom: 1rpx solid #ccc;
}
/* //下拉框选择 */
.bottom{
  width: 35rpx;
  height: 35rpx;
  line-height: 35rpx;
}
.sec_picker{
  margin: 20rpx 0;
}
.section{
  display: flex;
  justify-content: space-between;
  background: #fff;
  padding: 20rpx 20rpx;
  align-items: center;
  font-size: 32rpx;
  border-bottom: 1rpx solid #ccc;
}
.picker{
  display: flex;
  align-items: center;
  background: #fff;
}
.pre_input{
  width: 120rpx;
  border-bottom: 1rpx solid #ccc;
}
.title{
  font-size: 32rpx;
  color: #555;
  margin-left: 10rpx;
}
.lianxi{
  display: flex;
  padding: 10rpx 20rpx;
  align-items: center;
}
