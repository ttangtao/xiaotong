/* pages/announcement/readRecord/readRecord.wxss */
.itemWrap {
  display: flex;
  flex-direction: row;
  padding: 30rpx 40rpx;
  height: 220rpx;
  border-bottom: 1px solid #ccc;
  font-size: 30rpx;
}
.title {
  font-size: 36rpx;
  font-weight: 600;
}
.contentWrap {
  margin-left: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}
.date {
  margin-bottom: 10rpx;
}
.borderWrap {
  display: flex;
  flex-direction: row;
  height: inherit;
  flex-grow: 1;
  align-items: center;
  border-top: 1px solid #e0e0e0;
  margin-left: 30rpx;
}
.rankWrap {
     margin-bottom: 40rpx;
}
