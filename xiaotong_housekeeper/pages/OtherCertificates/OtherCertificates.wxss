  padding: 10rpx 20rpx;
}
.Er_title_icon{
  width: 35rpx;
  height: 35rpx;
  line-height: 35rpx;
}
.Er_title_text{
  margin-left: 20rpx;
  color: #83AF9B;
}
.zjName{
  display: flex;
