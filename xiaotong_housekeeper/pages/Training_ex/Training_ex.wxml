<!--pages/Project_ex/Project_ex.wxml-->
<view class='pro_ex_head'>
  <view class='xing'>
    <image src='../img/start2.png'></image>
  </view>
  <view class='pro_ex_text'>
    <text>培训经历</text>
  </view>
</view>

<view wx:for="{{3}}" wx:key="{{index}}" class='row'>
  <view class='row_text'>
    <view>
      <text>2017年1月1号到2017年12月12日</text>
    </view>
    <view>
      <text>郎沃培训机构</text>
    </view>
    <view>
      <text>前端培训课程</text>
    </view>
  </view>
  <view class='pro_ex_icons'>
    <view class='pro_ex_icon'>
      <image src='../img/edit.png'></image>
    </view>
    <view class='pro_ex_icon'>
      <image src='../img/del.png'></image>
    </view>
  </view>
</view>

<view>
  <button bindtap='addTrainBtn' class='ptButton otherButtonCls' hover-class='ptButtonHover'>新增项目经历</button>
</view>

<view class='operation'>
  <view>
    <button bindtap='preBtn' class='pre' hover-class='perHover'>上一步</button>
  </view>
  <view>
    <button bindtap='nextBtn' class='next' hover-class='nextHover'>下一步</button>
  </view>
</view>
<view style='height:200rpx;'></view>