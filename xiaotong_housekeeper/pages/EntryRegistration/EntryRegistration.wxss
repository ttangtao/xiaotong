.Er_title{
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
}
.Er_title_icon{
  width: 35rpx;
  height: 35rpx;
  line-height: 35rpx;
}
.Er_title_text{
  margin-left: 20rpx;
  color: #83AF9B;
}

/* //下拉框选择 */
.bottom{
  width: 35rpx;
  height: 35rpx;
  line-height: 35rpx;
}
.sec_picker{
  margin: 20rpx 0;
}
.section{
  display: flex;
  justify-content: space-between;
  background: #fff;
  padding: 20rpx 20rpx;
  align-items: center;
  font-size: 32rpx;
  border-bottom: 1rpx solid #ccc;
}
.picker{
  display: flex;
  align-items: center;
  background: #fff;
}
.add_pro_name{
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  padding: 20rpx;
  font-size: 32rpx;
