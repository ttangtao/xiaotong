/**app.wxss**/
@import 'style/weui.wxss';
.flex{
  display: flex;
  align-items: center;
}

text{
  font-family: "consolas";
  color: #555;
  font-size: 32rpx;
}
page {
  background: #f4f4f4;
}

.people_fill {
  width: 40rpx;
  height: 40rpx;
}


.head {
  display: flex;
  justify-content: space-around;
  font-size: 28rpx;
  background: #30c37d;
  padding: 20rpx 0;
  position: fixed;
  top: 0;
  width: 100%;
}
.head text{
  color: #fff!important;
}

.head_left, .head_right {
  display: flex;
  align-items: center;
}

.head_right>view:nth-child(1) {
  margin-right: 20rpx;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

image {
  width: 100%;
  height: 100%;
}

/*块状区域  */
.qz_box{
  background-color:#fff;
  padding: 20rpx 0;
  overflow: hidden;
  margin:10rpx 20rpx 20rpx;
  border:1rpx solid #30c37d;
}
.qz_title{
  font-size: 36rpx;
  font-weight: bold;
  color: #111;
  padding-left: 20rpx;
}
.qz_b_box{
  display: flex;
  width: 100%;
  flex-wrap: wrap;
  align-content: space-between;
  margin-bottom: 40rpx;
}
.qz_f_box{
  width: 25%;
}
.qz_box_container{
  margin: 60rpx;
  height:60rpx;
  margin-bottom: 0;
  margin-top:20px;
}
.qz_box_text{
  margin-bottom: 10rpx;
  text-align: center;
  margin-top: 10rpx;
  color: #83AF9B;
}
.qz_box_text>text{
  font-size: 28rpx;
}

/* 按钮 */
.operation{
  display: flex;
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #f5f5f5;
}
.operation>view{
  flex: 1;
  margin:20rpx;
}
.pre{
  background: #e02433;
  color: #fff;
}
.preHover{
  background: #FE4365;
}
.next{
  background: #31c27c;
  color: #fff;
}
.nextHover{
  background: #46DC96;
}
.ptButton{
  background-color: #30c37d;
  color: #fff;
  border:none;
}
.ptButtonHover {
  background-color:#2eb776!important;
}
/*几种icon  */
.icon1{
  width: 25rpx;
  height: 25rpx;
  line-height: 25rpx;
}
.icon2{
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
}